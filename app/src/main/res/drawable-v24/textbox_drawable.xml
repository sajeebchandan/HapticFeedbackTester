<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@null">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"></padding>
            <corners
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"></corners>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"></padding>
            <stroke
                android:width="1dp"
                android:color="@color/themeColor" />
            <solid android:color="@null"></solid>
            <corners android:radius="35dp" />
        </shape>
    </item>
</ripple>